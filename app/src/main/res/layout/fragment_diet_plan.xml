<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/palate_titan_white"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".homemodule.fragment.DietPlanFragment"
    tools:ignore="SpeakableTextPresentCheck">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dietPlanIndicatorTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/palate_titan_white"
        android:fontFamily="@font/poppins_semibold"
        android:padding="4dp"
        android:text="Loose Weight : Veg"
        android:textAlignment="center"
        android:textColor="@color/palate_big_stone"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/dietPlanRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dietPlanRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/dietPlanIndicatorTv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="15dp"
    app:cardElevation="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemShowExerciseStepDetailConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/palate_titan_white">

        <ImageView
            android:id="@+id/exerciseStepDetailImg"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/male"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toBottomOf="@id/itemShowExerciseStepDetailConstraintLayout"
            app:layout_constraintStart_toStartOf="@id/itemShowExerciseStepDetailConstraintLayout"
            app:layout_constraintTop_toTopOf="@id/itemShowExerciseStepDetailConstraintLayout" />

        <TextView
            android:id="@+id/exerciseStepTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="17dp"
            android:fontFamily="@font/noto_sans_bold"
            android:text="JumpingJacks"
            android:textColor="@color/palate_big_stone"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintBottom_toTopOf="@+id/exerciseStepRepetitionTv"
            app:layout_constraintStart_toEndOf="@+id/exerciseStepDetailImg"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/exerciseStepRepetitionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_bold"
            android:text="10x2"
            android:textColor="@color/palate_big_stone"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/exerciseStepTitleTv"
            app:layout_constraintTop_toBottomOf="@id/exerciseStepTitleTv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
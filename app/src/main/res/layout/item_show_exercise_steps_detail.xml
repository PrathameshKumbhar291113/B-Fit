<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/exerciseStepsDetailItemCard"
    app:cardElevation="2dp"
    android:layout_marginTop="1dp"
    app:cardCornerRadius="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemShowExerciseStepDetailConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/palate_titan_white">

        <ImageView
            android:id="@+id/exerciseStepDetailImg"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/male"
            app:layout_constraintDimensionRatio="1:1"
            android:scaleType="centerCrop"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toBottomOf="@id/itemShowExerciseStepDetailConstraintLayout"
            app:layout_constraintStart_toStartOf="@id/itemShowExerciseStepDetailConstraintLayout"
            app:layout_constraintTop_toTopOf="@id/itemShowExerciseStepDetailConstraintLayout" />

        <TextView
            android:id="@+id/exerciseStepTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="17dp"
            android:fontFamily="@font/noto_sans_bold"
            android:text="JumpingJacks"
            android:textColor="@color/palate_big_stone"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@+id/exerciseStepRepetitionTv"
            app:layout_constraintStart_toEndOf="@+id/exerciseStepDetailImg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/exerciseStepRepetitionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_3sdp"
            android:fontFamily="@font/noto_sans_bold"
            android:text="10x2"
            android:textColor="@color/palate_big_stone"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/exerciseStepTitleTv"
            app:layout_constraintTop_toBottomOf="@id/exerciseStepTitleTv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
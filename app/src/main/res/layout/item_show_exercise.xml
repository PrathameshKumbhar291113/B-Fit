<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="15dp"
    app:cardElevation="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemShowExerciseConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/palate_titan_white">

        <ImageView
            android:id="@+id/exerciseImage"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/male"
            app:layout_constraintEnd_toEndOf="@id/itemShowExerciseConstraintLayout"
            app:layout_constraintStart_toStartOf="@id/itemShowExerciseConstraintLayout"
            app:layout_constraintTop_toTopOf="@id/itemShowExerciseConstraintLayout"
            app:layout_constraintBottom_toBottomOf="@id/itemShowExerciseConstraintLayout"
            />

        <TextView
            android:id="@+id/exerciseTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:layout_marginTop="@dimen/_13sdp"
            android:fontFamily="@font/noto_sans_bold"
            android:textSize="@dimen/_18ssp"
            android:layout_marginStart="@dimen/_20sdp"
            android:textColor="@color/palate_big_stone"
            app:layout_constraintStart_toStartOf="@id/itemShowExerciseConstraintLayout"
            app:layout_constraintTop_toTopOf="@id/itemShowExerciseConstraintLayout"
            />

        <TextView
            android:id="@+id/exerciseRatingTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/noto_sans"
            android:text="Easy"
            android:layout_marginBottom="@dimen/_8sdp"
            android:textColor="@color/palate_big_stone"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toBottomOf="@id/itemShowExerciseConstraintLayout"
            app:layout_constraintStart_toStartOf="@id/itemShowExerciseConstraintLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/exerciseShowItemCard"
    app:cardElevation="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemShowExerciseConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/palate_titan_white">

        <ImageView
            android:id="@+id/exerciseImage"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@color/palate_big_stone"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="2:1"
            app:layout_constraintEnd_toEndOf="@id/itemShowExerciseConstraintLayout"
            app:layout_constraintStart_toStartOf="@id/itemShowExerciseConstraintLayout"
            app:layout_constraintTop_toTopOf="@id/itemShowExerciseConstraintLayout"
            app:layout_constraintBottom_toBottomOf="@id/itemShowExerciseConstraintLayout"
            />

        <TextView
            android:id="@+id/exerciseTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="20sp"
            android:layout_marginStart="8dp"
            android:textColor="@color/palate_titan_white"
            app:layout_constraintStart_toStartOf="@id/itemShowExerciseConstraintLayout"
            app:layout_constraintTop_toTopOf="@id/itemShowExerciseConstraintLayout"
            />

        <TextView
            android:id="@+id/exerciseRatingTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Advance"
            android:layout_marginBottom="24dp"
            android:textColor="@color/palate_titan_white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/itemShowExerciseConstraintLayout"
            app:layout_constraintStart_toStartOf="@id/itemShowExerciseConstraintLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>